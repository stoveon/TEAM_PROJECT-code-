<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pointDao">
	<insert id="insert" parameterType="pointVo">
		insert into POINT values (point_seq.nextval, #{nickname}, sysdate, #{changePoint}, #{changeWhy})
	</insert>
	<select id="selectCheck" resultType="int">
		select count(CHANGEDATE) from POINT where CHANGEDATE=sysdate and NICKNAME=#{nickname}
	</select>
	<select id="selectMonth" parameterType="HashMap" resultType="pointVo">
		select * from POINT 
			where CHANGEDATE <![CDATA[>=]]> (select add_months(trunc(sysdate, 'mm'),#{month}) from dual) 
    		and CHANGEDATE <![CDATA[<]]> last_day(sysdate)
    		and NICKNAME = #{nickname};
	</select>
	<select id="">
		select 
	</select>
	<delete id="delete" parameterType="String">
		delete from POINT where NICKAME=#{nickname}
	</delete>
</mapper>